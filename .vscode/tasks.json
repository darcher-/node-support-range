{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "go build -o bin/main",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "bin/main",
            "dependsOn": [ "build" ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [ ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "go test ./...",
            "group": "test",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf bin",
            "group": "none",
            "problemMatcher": [ ]
        }
    ]
}